<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.helofy.controllers.EditPlaylistController" prefHeight="446.0" prefWidth="809.0" stylesheets="@../styles/StyleEdit.css">
    <HBox spacing="20" layoutX="20" layoutY="20">
        <!-- Columna 1 -->
        <VBox spacing="15" alignment="CENTER_LEFT" prefWidth="380">
            <Label text="Editar Playlist" styleClass="title-label"/>

            <!-- Playlist Selector y Eliminar Playlist -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Seleccionar playlist:"/>
                <ComboBox fx:id="playlistSelector" prefWidth="200"/>
                <Button fx:id="deletePlaylistButton" text="Eliminar Playlist" styleClass="blue-button"/>
            </HBox>

            <!-- Imagen de la Playlist -->
            <ImageView fx:id="playlistImage" fitWidth="200" fitHeight="200" styleClass="playlist-image"/>

            <!-- Botón para cambiar la imagen -->
            <Button fx:id="changeImageButton" text="Cambiar imagen" styleClass="blue-button"/>

            <!-- Nombre de la Playlist -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Nombre:"/>
                <TextField fx:id="playlistNameField" prefWidth="300" styleClass="text-field"/>
            </HBox>

            <!-- Descripción de la Playlist -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Descripción:"/>
                <TextField fx:id="playlistDescriptionField" prefWidth="300" styleClass="text-field"/>
            </HBox>
        </VBox>

        <!-- Columna 2 -->
        <VBox spacing="15" alignment="CENTER_LEFT" prefWidth="380">
            <Label text="Canciones en la playlist:" styleClass="songs-label"/>
            <ListView fx:id="songListView" prefHeight="150" prefWidth="400" styleClass="list-view"/>

            <!-- Botones de gestión de canciones -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button fx:id="addSongsButton" text="Añadir canciones" styleClass="blue-button"/>
                <Button fx:id="removeSongButton" text="Eliminar canción seleccionada" styleClass="blue-button"/>
            </HBox>

            <!-- Botón para guardar cambios -->
            <Button fx:id="saveChangesButton" text="Guardar cambios" styleClass="blue-button"/>
        </VBox>
    </HBox>
</AnchorPane>
