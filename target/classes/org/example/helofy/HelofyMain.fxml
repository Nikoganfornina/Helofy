<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.helofy.controllers.HelofyMainController"
            stylesheets="@styles/Style.css">

  <!-- Header -->
  <top>
    <HBox styleClass="header">
      <children>
        <Label text="Helofy" styleClass="logo"/>
        <Region HBox.hgrow="ALWAYS"/>
        <HBox styleClass="search-container" alignment="CENTER_LEFT" spacing="5">
          <TextField fx:id="searchField" promptText="Buscar..." styleClass="search-field"/>
          <Button styleClass="search-button">
            <graphic>
              <Label text="🔍" styleClass="search-icon"/>
            </graphic>
          </Button>
        </HBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Pane minWidth="100"/>
      </children>
    </HBox>
  </top>

  <!-- Menú lateral -->
  <left>
    <VBox styleClass="side-menu">
      <Button text="Mi Biblioteca" styleClass="menu-button"/>
      <Separator styleClass="separator"/>
      <!-- Añadir fx:id aquí -->
      <VBox fx:id="playlistsContainer" styleClass="playlist-container">
        <!-- Eliminar los botones estáticos -->
      </VBox>
    </VBox>
  </left>

  <!-- Contenido principal -->
  <center>
    <StackPane fx:id="contentArea" styleClass="content-area"/>
  </center>

  <!-- Footer -->
  <bottom>
    <BorderPane styleClass="footer">
      <left>
        <HBox alignment="CENTER_LEFT" spacing="10">
          <ImageView fx:id="songImage" fitWidth="40" fitHeight="40" styleClass="album-art"/>
          <VBox>
            <Label fx:id="songName" text="No hay canción en reproducción" styleClass="song-title"/>
            <Label fx:id="songArtist" text="Artista desconocido" styleClass="song-artist"/>
          </VBox>
        </HBox>
      </left>

      <center>
        <VBox alignment="CENTER">
          <HBox spacing="20" alignment="CENTER">
            <Button fx:id="prevButton" styleClass="player-button" text="⏮"/>
            <Button fx:id="playButton" styleClass="player-button" text="⏯"/>
            <Button fx:id="nextButton" styleClass="player-button" text="⏭"/>
          </HBox>
          <Slider fx:id="progressSlider" styleClass="progress-slider"/>
        </VBox>
      </center>

      <right>
        <HBox alignment="CENTER_RIGHT" spacing="10">
          <Label text="🔊" styleClass="volume-icon"/>
          <Slider fx:id="volumeSlider" styleClass="volume-slider" min="0" max="1" value="0.5"/>
        </HBox>
      </right>
    </BorderPane>
  </bottom>
</BorderPane>