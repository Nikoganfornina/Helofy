<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="tarjeta"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.helofy.controllers.PlaylistCardController"
      spacing="10"
      alignment="CENTER"
      prefWidth="180"
      prefHeight="220"
      onMouseClicked="#handleClick">

    <ImageView fx:id="imgPortada"
               fitWidth="160"
               fitHeight="160"
               preserveRatio="true"
               smooth="true"
               cache="true" />

    <Label fx:id="lblNombre"
           id="lblNombre"
           maxWidth="180"
           alignment="CENTER"
    />



</VBox>
